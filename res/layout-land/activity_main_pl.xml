         <TableRow
             android:id="@+id/tableRow2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" >
         </TableRow>

         <ImageButton
             android:id="@+id/contactsBtn"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
             android:src="@drawable/contacts" />

